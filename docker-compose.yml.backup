version: '3.8'

networks:
  pose-estimation-network:
    driver: bridge

volumes:
  target-kafka-data:
    driver: local
  target-data:
    driver: local
  target-output:
    driver: local
  query-kafka-data:
    driver: local
  query-data:
    driver: local
  query-output:
    driver: local
  shared-data:
    driver: local
  shared-output:
    driver: local

services:
  target-kafka:
    image: confluentinc/cp-kafka:7.4.0
    hostname: target-kafka
    container_name: target-kafka
    ports:
    - 9093:9092
    networks:
    - pose-estimation-network
    environment:
      KAFKA_NODE_ID: 1
      KAFKA_PROCESS_ROLES: broker,controller
      KAFKA_CONTROLLER_QUORUM_VOTERS: 1@target-kafka:29093
      KAFKA_CONTROLLER_LISTENER_NAMES: CONTROLLER
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      KAFKA_LISTENERS: PLAINTEXT://target-kafka:29092,CONTROLLER://target-kafka:29093,PLAINTEXT_HOST://0.0.0.0:9092
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://target-kafka:29092,PLAINTEXT_HOST://localhost:9093
      KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      KAFKA_LOG_DIRS: /var/lib/kafka/data
      CLUSTER_ID: zKDRDeqfR-y0doLyGaLoww
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_AUTO_CREATE_TOPICS_ENABLE: 'true'
    volumes:
    - target-kafka-data:/var/lib/kafka/data
    user: 0:0
    healthcheck:
      test: kafka-topics --bootstrap-server target-kafka:29092 --list
      interval: 30s
      timeout: 10s
      retries: 3
    restart: unless-stopped

  target-api:
    build: ./target-pipeline/target-api
    container_name: target-api
    ports:
    - 8001:8001
    networks:
    - pose-estimation-network
    environment:
    - KAFKA_BOOTSTRAP_SERVERS=target-kafka:29092
    volumes:
    - target-data:/app/data
    - target-output:/app/output
    - shared-data:/app/shared
    depends_on:
      target-kafka:
        condition: service_healthy
    restart: unless-stopped

  target-point-cloud-generator:
    build: ./target-pipeline/point-cloud-generator
    container_name: target-point-cloud-generator
    networks:
    - pose-estimation-network
    environment:
    - KAFKA_BOOTSTRAP_SERVERS=target-kafka:29092
    - OMP_NUM_THREADS=32
    - OPENBLAS_NUM_THREADS=32
    - MKL_NUM_THREADS=32
    - NUMBA_NUM_THREADS=32
    - CUDA_VISIBLE_DEVICES=0
    - NVIDIA_VISIBLE_DEVICES=0
    volumes:
    - target-data:/app/data
    - target-output:/app/output
    depends_on:
      target-kafka:
        condition: service_healthy
    deploy:
      resources:
        reservations:
          devices:
          - driver: nvidia
            device_ids:
            - '0'
            capabilities:
            - gpu
    restart: unless-stopped

  target-dinov2-processor:
    build: ./target-pipeline/target-dinov2-processor
    container_name: target-dinov2-processor
    networks:
    - pose-estimation-network
    environment:
    - KAFKA_BOOTSTRAP_SERVERS=target-kafka:29092
    - CUDA_VISIBLE_DEVICES=0
    - GPU_MEMORY_FRACTION=0.25
    - PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:256
    - OMP_NUM_THREADS=16
    - OPENBLAS_NUM_THREADS=16
    volumes:
    - target-data:/app/data
    - target-output:/app/output
    depends_on:
      target-kafka:
        condition: service_healthy
    deploy:
      resources:
        reservations:
          devices:
          - driver: nvidia
            device_ids:
            - '0'
            capabilities:
            - gpu
    restart: unless-stopped

  target-gedi-processor:
    build: ./target-pipeline/target-gedi-processor
    container_name: target-gedi-processor
    networks:
    - pose-estimation-network
    environment:
    - KAFKA_BOOTSTRAP_SERVERS=target-kafka:29092
    - CUDA_VISIBLE_DEVICES=0
    - GPU_MEMORY_FRACTION=0.25
    - PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128
    - OMP_NUM_THREADS=16
    volumes:
    - target-data:/app/data
    - target-output:/app/output
    depends_on:
      target-kafka:
        condition: service_healthy
    deploy:
      resources:
        reservations:
          devices:
          - driver: nvidia
            device_ids:
            - '0'
            capabilities:
            - gpu
    restart: unless-stopped

  target-feature-fusion:
    build: ./target-pipeline/target-feature-fusion
    container_name: target-feature-fusion
    networks:
    - pose-estimation-network
    environment:
    - KAFKA_BOOTSTRAP_SERVERS=target-kafka:29092
    - OMP_NUM_THREADS=16
    - OPENBLAS_NUM_THREADS=16
    volumes:
    - target-output:/app/output
    - shared-output:/app/shared
    depends_on:
      target-kafka:
        condition: service_healthy
    restart: unless-stopped

  query-kafka:
    image: confluentinc/cp-kafka:latest
    hostname: query-kafka
    container_name: query-kafka
    ports:
    - 9092:9092
    networks:
    - pose-estimation-network
    environment:
      KAFKA_NODE_ID: 1
      KAFKA_PROCESS_ROLES: broker,controller
      KAFKA_CONTROLLER_QUORUM_VOTERS: 1@query-kafka:29093
      KAFKA_CONTROLLER_LISTENER_NAMES: CONTROLLER
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT,PLAINTEXT_HOST:PLAINTEXT
      KAFKA_LISTENERS: PLAINTEXT://0.0.0.0:9092,CONTROLLER://0.0.0.0:29093
      KAFKA_ADVERTISED_LISTENERS: PLAINTEXT://query-kafka:9092
      KAFKA_INTER_BROKER_LISTENER_NAME: PLAINTEXT
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR: 1
      KAFKA_TRANSACTION_STATE_LOG_MIN_ISR: 1
      KAFKA_AUTO_CREATE_TOPICS_ENABLE: 'true'
      KAFKA_LOG_RETENTION_HOURS: 168
      KAFKA_LOG_DIRS: /tmp/kraft-combined-logs
      KAFKA_GROUP_INITIAL_REBALANCE_DELAY_MS: 0
      CLUSTER_ID: MkU3OEVBNTcwNTJENDM2Qk
    volumes:
    - query-kafka-data:/tmp/kraft-combined-logs
    user: 0:0
    healthcheck:
      test:
      - CMD-SHELL
      - kafka-broker-api-versions --bootstrap-server localhost:9092 > /dev/null 2>&1
      interval: 10s
      timeout: 10s
      retries: 5
    restart: unless-stopped

  query-api:
    build: ./query-pipeline/query-api
    container_name: query-api
    ports:
    - 7861:7861
    networks:
    - pose-estimation-network
    environment:
    - KAFKA_BOOTSTRAP_SERVERS=query-kafka:9092
    volumes:
    - query-data:/app/data
    - query-output:/app/output
    - shared-data:/app/shared
    depends_on:
      query-kafka:
        condition: service_healthy
    restart: unless-stopped

  cnos-renderer:
    build: ./query-pipeline/cnos-renderer
    container_name: cnos-renderer
    networks:
    - pose-estimation-network
    environment:
    - KAFKA_BOOTSTRAP_SERVERS=query-kafka:9092
    - CUDA_VISIBLE_DEVICES=0
    - PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128
    volumes:
    - query-data:/app/data
    - query-output:/app/output
    depends_on:
      query-kafka:
        condition: service_healthy
    deploy:
      resources:
        reservations:
          devices:
          - driver: nvidia
            device_ids:
            - '0'
            capabilities:
            - gpu
    restart: unless-stopped

  query-point-extractor:
    build: ./query-pipeline/point-extractor
    container_name: query-point-extractor
    networks:
    - pose-estimation-network
    environment:
    - KAFKA_BOOTSTRAP_SERVERS=query-kafka:9092
    volumes:
    - query-data:/app/data
    - query-output:/app/output
    depends_on:
      query-kafka:
        condition: service_healthy
    restart: unless-stopped

  query-dinov2-processor:
    build: ./query-pipeline/dinov2-processor
    container_name: query-dinov2-processor
    networks:
    - pose-estimation-network
    environment:
    - KAFKA_BOOTSTRAP_SERVERS=query-kafka:9092
    - CUDA_VISIBLE_DEVICES=0
    - PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128
    volumes:
    - query-data:/app/data
    - query-output:/app/output
    depends_on:
      query-kafka:
        condition: service_healthy
    deploy:
      resources:
        reservations:
          devices:
          - driver: nvidia
            device_ids:
            - '0'
            capabilities:
            - gpu
    restart: unless-stopped

  query-gedi-processor:
    build: ./query-pipeline/gedi-processor
    container_name: query-gedi-processor
    networks:
    - pose-estimation-network
    environment:
    - KAFKA_BOOTSTRAP_SERVERS=query-kafka:9092
    - CUDA_VISIBLE_DEVICES=0
    - PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:128
    volumes:
    - query-data:/app/data
    - query-output:/app/output
    depends_on:
      query-kafka:
        condition: service_healthy
    deploy:
      resources:
        reservations:
          devices:
          - driver: nvidia
            device_ids:
            - '0'
            capabilities:
            - gpu
    restart: unless-stopped

  query-feature-fusion:
    build: ./query-pipeline/feature-fusion
    container_name: query-feature-fusion
    networks:
    - pose-estimation-network
    environment:
    - KAFKA_BOOTSTRAP_SERVERS=query-kafka:9092
    volumes:
    - query-output:/app/output
    - shared-output:/app/shared
    depends_on:
      query-kafka:
        condition: service_healthy
    restart: unless-stopped

  pose-overlay-pipeline:
    build: ./pose-overlay-pipeline
    container_name: pose-overlay-pipeline
    ports:
    - 8002:8002
    networks:
    - pose-estimation-network
    environment:
    - KAFKA_BOOTSTRAP_SERVERS=target-kafka:29092,query-kafka:9092
    - OMP_NUM_THREADS=16
    - OPENBLAS_NUM_THREADS=16
    volumes:
    - shared-data:/app/data
    - shared-output:/app/output
    - target-output:/app/target_data
    - query-output:/app/query_data
    depends_on:
      target-kafka:
        condition: service_healthy
      query-kafka:
        condition: service_healthy
    restart: unless-stopped

  frontend:
    build: ./frontend
    ports:
    - 3000:3000
    depends_on:
      target-api:
        condition: service_healthy
      query-api:
        condition: service_healthy
      pose-overlay-pipeline:
        condition: service_healthy
    environment:
    - NODE_ENV=production
    networks:
    - pose-estimation-network
    restart: unless-stopped
